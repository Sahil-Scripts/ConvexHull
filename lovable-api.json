{
  "version": "1.0",
  "name": "Convex Hull Comparative Analysis API",
  "baseUrl": "https://abcd1234.ngrok.io",
  "endpoints": [
    {
      "name": "Generate Points",
      "path": "/generate",
      "method": "GET",
      "params": [
        { "name": "n", "type": "number", "required": true, "example": 1000 },
        { "name": "seed", "type": "number", "required": false, "example": 42 },
        { "name": "dist", "type": "string", "required": false, "example": "circle" }
      ],
      "responseExample": {
        "points": [{ "x": 1.23, "y": 4.56 }],
        "n": 1000,
        "seed": 42,
        "dist": "circle"
      }
    },
    {
      "name": "Compute Hulls",
      "path": "/hulls",
      "method": "GET",
      "params": [
        { "name": "n", "type": "number", "required": true, "example": 1000 },
        { "name": "seed", "type": "number", "required": false, "example": 42 },
        { "name": "dist", "type": "string", "required": false, "example": "square" }
      ],
      "responseExample": {
        "jarvis": { "points": [{ "x": 0, "y": 0 }], "ms": 120 },
        "graham": { "points": [{ "x": 0, "y": 0 }], "ms": 15 }
      }
    },
    {
      "name": "Step-by-Step Hulls",
      "path": "/steps",
      "method": "GET",
      "params": [
        { "name": "n", "type": "number", "required": true, "example": 500 },
        { "name": "seed", "type": "number", "required": false, "example": 123 },
        { "name": "dist", "type": "string", "required": false, "example": "clusters" }
      ],
      "responseExample": {
        "jarvis": {
          "size": 40,
          "steps": [
            { "type": "edge", "from": { "x": 1, "y": 2 }, "to": { "x": 3, "y": 4 } }
          ]
        },
        "graham": {
          "size": 40,
          "steps": [
            { "type": "push", "point": { "x": 5, "y": 6 } }
          ]
        }
      }
    },
    {
      "name": "Performance Analysis",
      "path": "/analyze",
      "method": "GET",
      "params": [
        { "name": "min", "type": "number", "required": false, "example": 2000 },
        { "name": "max", "type": "number", "required": false, "example": 64000 },
        { "name": "mult", "type": "number", "required": false, "example": 2 },
        { "name": "dist", "type": "string", "required": false, "example": "gaussian" }
      ],
      "responseExample": [
        { "n": 2000, "jarvis_ms": 100, "graham_ms": 10 },
        { "n": 4000, "jarvis_ms": 400, "graham_ms": 25 }
      ]
    }
  ]
}
